@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Image1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    We will make sure you job is done professionally <br />
                    <a asp-action="Create" asp-controller="Logs" class="btn btn-success">Create New Job</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Image2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    It's time you start giving your jobs to seasoned and experienced aritisans <br />
                    <a class="btn btn-primary" asp-controller="Logs" asp-action="Create">
                        Add Job
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Image3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Experience the sweetness of automated job services <br/>
                    <a class="btn btn-primary" asp-controller="Logs" asp-action="Create">
                        Add Job
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Image4.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Experience the sweetness of automated job services <br/>
                    <a class="btn btn-primary" asp-controller="Logs" asp-action="Create">
                        Add Job
                    </a>
                </p>
            </div>
        </div>

    </div>
